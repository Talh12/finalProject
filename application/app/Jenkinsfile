pipeline {
    agent {
        kubernetes {
            label 'jenkins-agent'
            yamlFile 'application/jenkins-agent.yaml'
            defaultContainer 'dind'
        }
    }

    environment {
        DOCKER_IMAGE = 'tal5041996/weather-app'
        DOCKERHUB_CREDENTIALS = 'docker-cred'
        GITHUB_CREDENTIALS = 'tal-github'
        DOCKER_TAG = 'latest'
        FEATURE_BRANCH = 'feature'
        REPO_URL = 'https://github.com/Talh12/finalProject.git'
        APPLICATION_DIR = 'application'
        PROJECT_DIR = 'finalProject' // New environment variable for project directory
    }

    stages {
        stage('Set Workspace Directory') {
            steps {
                dir("${PROJECT_DIR}") {
                    // Now all subsequent steps will execute in the 'finalProject' directory
                    // Commands inside this block will execute in the "${PROJECT_DIR}" directory
                    // For example:
                    sh 'git config --global --add safe.directory /home/jenkins/agent/workspace/weather-app'
                    sh 'git config --global user.email "halias32236@gmail.com"'
                    sh 'git config --global user.name "Talh12"'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}", "-f ${APPLICATION_DIR}/Dockerfile ${APPLICATION_DIR}")
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKERHUB_CREDENTIALS) {
                        docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").push()
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh "docker-compose -f ${APPLICATION_DIR}/docker-compose.yaml up --build --abort-on-container-exit"
                }
            }
        }

        stage('Check and Push Changes to Feature Branch') {
            steps {
                script {
                    dir("${PROJECT_DIR}") {
                        // Now executing Git operations within the 'application' directory of 'finalProject'
                        sh """
                        git fetch origin '+refs/heads/*:refs/remotes/origin/*'
                        git checkout --track origin/${FEATURE_BRANCH}
                        git add -A
                        git commit -m "automated commit by Jenkins"
                        git push origin ${FEATURE_BRANCH}
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                currentBuild.result = 'SUCCESS'
            }
        }
    }
}
